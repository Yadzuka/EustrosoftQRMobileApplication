<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scan_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_scan_item_text_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Scan Item Text" />

    <TextView
        android:id="@+id/list_item_scan_item_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_scan_item_text_text_view"
        android:padding="4dp"
        tools:text="Scan Item Date" />

    <TextView
        android:id="@+id/list_item_scan_item_time_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/list_item_scan_item_text_text_view"
        android:layout_toEndOf="@id/list_item_scan_item_date_text_view"
        tools:text="Scan Item Time" />

</RelativeLayout>