<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/filled_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="10dp">

        <TextView
            android:id="@+id/note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Title" />

        <EditText
            android:id="@+id/note_title_edit_field"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/note_title" />

        <TextView
            android:id="@+id/note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_below="@id/note_title"
            android:text="Text" />

        <EditText
            android:id="@+id/note_text_edit_field"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/colorAccent"
            android:layout_below="@id/note_title_edit_field"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/note_text" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filled_data">

        <Button
            android:id="@+id/note_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/note_photo_button"
            android:text="Save" />

        <Button
            android:id="@+id/note_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create photo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo">

        <ImageView
            android:id="@+id/note_image_view"
            android:layout_width="500dp"
            android:layout_height="500dp" />

    </RelativeLayout>

</RelativeLayout>